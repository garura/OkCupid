<h1 id='user_entry'>Sign Up!</h1>

<form action="<%= users_url %>" method="post">
  <input type='hidden'
         name='authenticity_token'
         value='<%= form_authenticity_token %>'>

  <label id='label_form' >Username <input type='text'
                                          name='user[username]'
                                          value='<%= @user.username %>'>
  </label>
  <br>

  <label id='label_form'>Password <input type='password'
                                         name='user[password]'
                                         value=''>
  </label>
  <br>

  <label id='label_form' >Email <input type='text'
                                       name='user[email]'
                                       value='<%= @user.email %>'>
  </label>

  <label id='label_form' >Birthdate
    <input id='bday' type='text' name='month' placeholder='MM' >
    <input id='bday' type='text' name='month' placeholder='DD' >
    <input id='bday' type='text' name='month' placeholder='YYYY' >
  <br>

  <input id='submit_form' type='submit' value='Create Account!'>
</form>

<label id='link_label' >Already have an account?</label>
<%= link_to "Sign In!", new_session_url, id: "alternate_entry_link" %>
